
<h1> Products </h1>


<div>
	<%= link_to "Sign In" , new_user_path %>
</div>

<div>
	<%= link_to "Log In" , users_path %>
</div>

<div>
	<%= link_to "Create a new Product", new_product_path %>
</div>

<% @products.each do |product| %>
	<p><%= product[:name] %>, <%= product[:description]%>, <%= product[:price_in_cents] %> </p>
<% end %>

<!--  Seach function -->
	
	
	<%= form_tag products_path, method: :get, authentication: false, id: 'search-form' do %>
		<%= text_field_tag :search, params[:search] %>
		<%= submit_tag "search" %>
		<%end%>

	<div id="products">
			<%= render @products %>
		</div>





