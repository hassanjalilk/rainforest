

<p><%= product[:name] %>, <%= product[:description]%>, <%= product[:price_in_cents] %> </p>

<div id="products">
  <%= render @products %>
</div>

<%= link_to product_path(product.id) do %>
    <h2>
      <%= product.formatted_price %>
      <%= product.name %>
    </h2>
  <% end %>
  <p><%= truncate(product.description, length: 100) %></p>